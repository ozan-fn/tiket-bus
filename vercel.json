{
    "version": 2,
    "builds": [
        { "src": "/api/index.php", "use": "vercel-php@0.7.3" },
        { "src": "/public/**", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "/public/$1", "continue": true },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ]
}
